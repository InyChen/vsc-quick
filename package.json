{
	"name": "vsc-quick",
	"displayName": "vsc-quick",
	"description": "quick way of fullstack development",
	"author": "chen jia lin",
	"version": "0.0.9",
	"publisher": "vsc-quick",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"icon": "resources/icon.png",
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "quickSideBar",
					"title": "Quick快速开发",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"quickSideBar": [
				{
					"id": "projectsView",
					"name": "Quick项目列表"
				}
			]
		},
		"commands": [
			{
				"command": "extension.quick.refreshProjects",
				"title": "刷新项目列表",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "extension.quick.addProject",
				"title": "新建项目",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "extension.quick.addComponent",
				"title": "添加组件",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "extension.quick.publishComponent",
				"title": "发布组件",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "extension.quick.openComponent",
				"title": "编辑组件",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "extension.quick.addProject",
					"when": "view == projectsView",
					"group": "navigation"
				},
				{
					"command": "extension.quick.refreshProjects",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "extension.quick.publishComponent",
					"when": "view == projectsView",
					"group": "navigation"
				},
				{
					"command": "extension.quick.addComponent",
					"when": "view == projectsView",
					"group": "navigation"
				},
				{
					"command": "extension.quick.openComponent",
					"when": "view == projectsView",
					"group": "navigation"
				}
			]
		},
		"configuration": [
			{
				"title": "Quick",
				"properties": {
					"quick.userName": {
						"type": "string"
					},
					"quick.secret": {
						"type": "string"
					},
					"quick.workspace": {
						"type": "string"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^10.2.0",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"axios": "^0.19.0"
	}
}